---
/**
 * Badge Component (Atom)
 *
 * A small label for status, categories, or counts.
 * All visual properties are controlled via CSS custom properties.
 *
 * @example
 * <Badge>New</Badge>
 * <Badge variant="success">Active</Badge>
 * <Badge variant="warning" size="lg">Pending</Badge>
 *
 * @customization
 * Override these CSS variables to customize:
 * --badge-font-size, --badge-font-weight, --badge-padding
 * --badge-border-radius, --badge-{variant}-bg, --badge-{variant}-color
 */

interface Props {
  /** Badge style variant */
  variant?: 'default' | 'primary' | 'success' | 'warning' | 'error';
  /** Badge size */
  size?: 'sm' | 'md' | 'lg';
  /** Additional CSS classes */
  class?: string;
  [key: string]: any;
}

const {
  variant = 'default',
  size = 'md',
  class: className = '',
  ...rest
} = Astro.props;

const classes = [
  'badge',
  `badge--${variant}`,
  `badge--${size}`,
  className,
].filter(Boolean).join(' ');
---

<span class={classes} {...rest}>
  <slot />
</span>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;

    /* Typography */
    font-family: var(--badge-font-family, var(--font-family-sans));
    font-weight: var(--badge-font-weight, var(--font-weight-medium));
    line-height: 1;
    white-space: nowrap;

    /* Shape */
    border-radius: var(--badge-border-radius, var(--radius-full));
  }

  /* ============================================
     Size Variants
     ============================================ */

  .badge--sm {
    padding: var(--badge-padding-sm, var(--space-1) var(--space-2));
    font-size: var(--badge-font-size-sm, var(--font-size-xs));
  }

  .badge--md {
    padding: var(--badge-padding-md, var(--space-1) var(--space-3));
    font-size: var(--badge-font-size-md, var(--font-size-sm));
  }

  .badge--lg {
    padding: var(--badge-padding-lg, var(--space-2) var(--space-4));
    font-size: var(--badge-font-size-lg, var(--font-size-base));
  }

  /* ============================================
     Style Variants
     ============================================ */

  .badge--default {
    background-color: var(--badge-default-bg, var(--color-bg-tertiary));
    color: var(--badge-default-color, var(--color-text-secondary));
  }

  .badge--primary {
    background-color: var(--badge-primary-bg, var(--color-primary-100));
    color: var(--badge-primary-color, var(--color-primary-700));
  }

  .badge--success {
    background-color: var(--badge-success-bg, var(--color-success-50));
    color: var(--badge-success-color, var(--color-success-700));
  }

  .badge--warning {
    background-color: var(--badge-warning-bg, var(--color-warning-50));
    color: var(--badge-warning-color, var(--color-warning-700));
  }

  .badge--error {
    background-color: var(--badge-error-bg, var(--color-error-50));
    color: var(--badge-error-color, var(--color-error-700));
  }
</style>
