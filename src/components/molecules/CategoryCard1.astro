---
/**
 * CategoryCard1 Component (Molecule)
 *
 * A card for displaying a blog category with name, description,
 * post count, and link to the category page.
 *
 * Naming: CategoryCard1 follows Relume naming convention.
 * - CategoryCard1: Basic category card (this component)
 *
 * @example
 * <CategoryCard1
 *   name="Tutorials"
 *   description="Step-by-step guides..."
 *   href="/category/tutorials"
 *   postCount={12}
 *   color="#6366f1"
 * />
 *
 * @customization
 * Override these CSS variables to customize:
 * --categorycard1-bg, --categorycard1-padding, --categorycard1-border-radius
 */

interface Props {
  /** Category name */
  name: string;
  /** Category description */
  description?: string;
  /** Link to category page */
  href: string;
  /** Number of posts in this category */
  postCount?: number;
  /** Category accent color */
  color?: string;
  /** Card style variant */
  variant?: 'elevated' | 'outlined' | 'filled';
  /** Additional CSS classes */
  class?: string;
  [key: string]: any;
}

const {
  name,
  description,
  href,
  postCount,
  color,
  variant = 'outlined',
  class: className = '',
  ...rest
} = Astro.props;

const classes = [
  'categorycard1',
  `categorycard1--${variant}`,
  className,
].filter(Boolean).join(' ');

const accentStyle = color ? `--categorycard1-accent: ${color};` : '';
---

<a href={href} class={classes} style={accentStyle} {...rest}>
  <div class="categorycard1_accent"></div>
  
  <div class="categorycard1_content">
    <h3 class="categorycard1_name">{name}</h3>
    
    {description && (
      <p class="categorycard1_description">{description}</p>
    )}
    
    {postCount !== undefined && (
      <span class="categorycard1_count">
        {postCount} {postCount === 1 ? 'post' : 'posts'}
      </span>
    )}
  </div>

  <div class="categorycard1_arrow">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M5 12h14M12 5l7 7-7 7" />
    </svg>
  </div>
</a>

<style>
  .categorycard1 {
    --categorycard1-accent: var(--color-primary-600);
    
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--categorycard1-padding, var(--space-5));
    border-radius: var(--categorycard1-border-radius, var(--radius-lg));
    text-decoration: none;
    color: inherit;
    transition:
      transform var(--transition-fast),
      box-shadow var(--transition-fast),
      border-color var(--transition-fast);
    position: relative;
    overflow: hidden;
  }

  /* ============================================
     Variant Styles
     ============================================ */

  .categorycard1--elevated {
    background-color: var(--categorycard1-elevated-bg, var(--color-bg-primary));
    box-shadow: var(--categorycard1-elevated-shadow, var(--shadow-md));
  }

  .categorycard1--outlined {
    background-color: var(--categorycard1-outlined-bg, var(--color-bg-primary));
    border: var(--categorycard1-border-width, 1px) solid
            var(--categorycard1-border-color, var(--color-border-default));
  }

  .categorycard1--filled {
    background-color: var(--categorycard1-filled-bg, var(--color-bg-secondary));
  }

  /* ============================================
     Hover State
     ============================================ */

  .categorycard1:hover {
    transform: translateY(-2px);
  }

  .categorycard1--elevated:hover {
    box-shadow: var(--categorycard1-hover-shadow, var(--shadow-lg));
  }

  .categorycard1--outlined:hover {
    border-color: var(--categorycard1-accent);
  }

  .categorycard1:focus-visible {
    outline: 2px solid var(--color-border-focus);
    outline-offset: 2px;
  }

  /* ============================================
     Accent Bar
     ============================================ */

  .categorycard1_accent {
    width: 4px;
    align-self: stretch;
    background-color: var(--categorycard1-accent);
    border-radius: var(--radius-full);
    flex-shrink: 0;
  }

  /* ============================================
     Content
     ============================================ */

  .categorycard1_content {
    flex: 1;
    min-width: 0;
  }

  .categorycard1_name {
    font-family: var(--categorycard1-name-font, var(--font-family-sans));
    font-size: var(--categorycard1-name-size, var(--text-size-h5));
    font-weight: var(--categorycard1-name-weight, var(--font-weight-semibold));
    line-height: var(--line-height-tight);
    margin: 0 0 var(--space-1) 0;
    color: var(--categorycard1-name-color, var(--color-text-primary));
  }

  .categorycard1_description {
    font-size: var(--categorycard1-description-size, var(--text-size-small));
    line-height: var(--line-height-relaxed);
    color: var(--categorycard1-description-color, var(--color-text-secondary));
    margin: 0 0 var(--space-2) 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .categorycard1_count {
    font-size: var(--text-size-small);
    color: var(--categorycard1-accent);
    font-weight: var(--font-weight-medium);
  }

  /* ============================================
     Arrow
     ============================================ */

  .categorycard1_arrow {
    flex-shrink: 0;
    color: var(--color-text-tertiary);
    transition: transform var(--transition-fast), color var(--transition-fast);
  }

  .categorycard1:hover .categorycard1_arrow {
    transform: translateX(4px);
    color: var(--categorycard1-accent);
  }
</style>
