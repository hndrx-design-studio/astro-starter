---
/**
 * TeamMember1 Component (Molecule)
 *
 * Displays a team member card with avatar, name, role, and optional bio.
 * Combines Avatar atom with text elements.
 *
 * Naming: TeamMember1 follows Relume naming convention.
 * - TeamMember1: Vertical card layout (this component)
 * - TeamMember2: Would be horizontal layout
 * - TeamMember3: Would be card with social links
 *
 * @example
 * <TeamMember1 
 *   name="Jane Doe"
 *   role="CEO & Founder"
 *   image="/images/jane.jpg"
 *   bio="Jane leads our team with 10+ years of experience."
 * />
 *
 * @customization
 * Override these CSS variables to customize:
 * --team-member1-gap, --team-member1-text-align
 */

import Avatar from '@atoms/Avatar.astro';

interface Props {
  /** Team member name */
  name: string;
  /** Team member role/title */
  role: string;
  /** Avatar image URL */
  image?: string;
  /** Short bio or description */
  bio?: string;
  /** Avatar size */
  avatarSize?: 'md' | 'lg' | 'xl';
  /** Layout alignment */
  align?: 'left' | 'center';
  /** Additional CSS classes */
  class?: string;
  [key: string]: any;
}

const {
  name,
  role,
  image,
  bio,
  avatarSize = 'xl',
  align = 'center',
  class: className = '',
  ...rest
} = Astro.props;

const classes = [
  'team-member1',
  `team-member1_${align}`,
  className,
].filter(Boolean).join(' ');
---

<article class={classes} {...rest}>
  <Avatar 
    src={image} 
    alt={name} 
    size={avatarSize}
    class="team-member1_avatar"
  />
  <div class="team-member1_info">
    <h3 class="team-member1_name">{name}</h3>
    <p class="team-member1_role">{role}</p>
    {bio && <p class="team-member1_bio">{bio}</p>}
  </div>
  <slot />
</article>

<style>
  .team-member1 {
    display: flex;
    flex-direction: column;
    gap: var(--team-member1-gap, var(--space-4));
  }

  /* ============================================
     Alignment Variants
     ============================================ */

  .team-member1_center {
    align-items: center;
    text-align: center;
  }

  .team-member1_left {
    align-items: flex-start;
    text-align: left;
  }

  /* ============================================
     Elements
     ============================================ */

  .team-member1_avatar {
    margin-bottom: var(--space-2);
  }

  .team-member1_info {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .team-member1_name {
    font-family: var(--team-member1-name-font, var(--font-family-sans));
    font-size: var(--team-member1-name-size, var(--text-size-h6));
    font-weight: var(--team-member1-name-weight, var(--font-weight-semibold));
    line-height: var(--line-height-tight);
    margin: 0;
    color: var(--team-member1-name-color, var(--color-text-primary));
  }

  .team-member1_role {
    font-size: var(--team-member1-role-size, var(--text-size-small));
    color: var(--team-member1-role-color, var(--color-text-secondary));
    margin: 0;
  }

  .team-member1_bio {
    font-size: var(--team-member1-bio-size, var(--text-size-small));
    color: var(--team-member1-bio-color, var(--color-text-secondary));
    margin: var(--space-2) 0 0 0;
    max-width: 30ch;
  }

  .team-member1_center .team-member1_bio {
    margin-left: auto;
    margin-right: auto;
  }
</style>
